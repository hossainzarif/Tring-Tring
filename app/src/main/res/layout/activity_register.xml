<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">





    <ImageView

        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/blur4"

        />

    <LinearLayout
        android:layout_width="273dp"
        android:layout_height="411dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/nameeditText4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="5dp"

            android:backgroundTint="@color/black"
            android:drawableLeft="@drawable/ic_action_person"
            android:ems="10"
            android:fontFamily="@font/advent_pro_medium"
            android:hint="Name"
            android:inputType="textPersonName"
            android:textColorHint="@color/black"
            android:textSize="20dp"

            />

        <EditText
            android:id="@+id/usereditText8"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="5dp"

            android:backgroundTint="@color/black"
            android:drawableLeft="@drawable/ic_action_nameok"
            android:ems="10"
            android:fontFamily="@font/advent_pro_medium"
            android:hint="Username"
            android:inputType="textPersonName"
            android:textColorHint="@color/black"
            android:textSize="20dp"

            />
        <EditText
            android:id="@+id/gendereditText9"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="5dp"

            android:backgroundTint="@color/black"
            android:drawableLeft="@drawable/ic_action_ic_action_gen"
            android:ems="10"
            android:fontFamily="@font/advent_pro_medium"
            android:hint="Gender"
            android:inputType="textPersonName"
            android:textColorHint="@color/black"
            android:textSize="20dp"

            />

        <EditText
            android:id="@+id/phoneeditText5"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="5dp"

            android:backgroundTint="@color/black"
            android:drawableLeft="@drawable/ic_action_pho"
            android:ems="10"
            android:fontFamily="@font/advent_pro_medium"
            android:hint="phonenumber"
            android:inputType="phone"
            android:textColorHint="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/passeditText6"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="5dp"

            android:backgroundTint="@color/black"
            android:drawableLeft="@drawable/ic_action_pass"
            android:ems="10"
            android:fontFamily="@font/advent_pro_medium"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColorHint="@color/black"
            android:textSize="20dp" />

        <Button
            android:id="@+id/buttonregister"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:background="@drawable/bc"
            android:fontFamily="@font/advent_pro_medium"
            android:text="Register"
            android:textSize="20sp"

            />
    </LinearLayout>



</RelativeLayout>